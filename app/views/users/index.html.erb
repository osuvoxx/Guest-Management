<div class="container">
<div style="width:100%;height:55px" class="bbottom">
  <div><h1>EMPLOYEES<span style="font-size:16px;">
  <% if @user.role.id == 1 || @user.role.id == 2 %>
    <ul class="navbar-nav float-right">
     <div class="dropdown" style="float:right;">
      <a class="btn mr-5 " href="#" role="button" id="notificationadmin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class=" fa fa-bell fa-2x"></i><span class=" p-1" ><span class="badge badge-danger" style="font-size:15px;"id="count1"></span>
      </a>
      <div class="dropdown-content" id="shownotification1" >
        <a href="#">No New Notification</a>
      </div>
    </div>
    </ul></span></h1>
    <% end %>
  </div>
</div>
<div class="container mt-2">
  <% if flash[:notice] %>
    <div class="text-center container">
        <div class="alert alert-warning alert-dismissible" role="alert">
            <strong><%=flash[:notice] %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
  <% end %>
</div>
<div class="container mt-2">
<table class="table table-secondary table-striped table-bordered">
  <thead class="bg-success">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <% if @user.role.id == 1%>
      <th colspan="3">Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @userall.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>      
        <td><%= user.role.role %></td>
        <% if @user.role.id == 1%>
          <td><%= link_to 'Show', user,class:"btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_user_path(user),class:"btn btn-primary" %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @user.role.id == 1%>
  <%= link_to 'Add Employee', new_user_path ,class:"btn btn-dark"%>
<% end %>
</div>
<br>
</div>