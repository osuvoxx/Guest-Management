<style>
.bbottom{
  border-bottom:2px solid grey;
}
</style>
<div class="container">
<div style="width=100%;height:55px" class="bbottom">
  <h1>Employee</h1>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
<table class="table table-dark table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <% if @user.role.id == 1%>
      <th colspan="3">Options</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @userall.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>      
        <td><%= user.role.role %></td>
        <% if @user.role.id == 1%>
          <td><%= link_to 'Show', user,class:"btn btn-light" %></td>
          <td><%= link_to 'Edit', edit_user_path(user),class:"btn btn-light" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-light" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @user.role.id == 1%>
  <%= link_to 'Add Employee', new_user_path ,class:"btn btn-dark"%>
<% end %>
</div>
<br>
</div>