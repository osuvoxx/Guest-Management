<style>
  .bbottom{
    border-bottom:2px solid grey;
  }
  </style>
<div class="container">
  <div style="width=100%;height:55px" class="bbottom">
    <h1>Profile</h1>
  </div>

<p id="notice"><%= notice %></p>
<div class="container">
<div class="jumbotron container py-3">
 
    <h1>
    <strong><%= @userindex.name %></strong>
    </h1>
  <hr>
    <p>
    <strong>Email:</strong>
    <%= @userindex.email %>
    </p>

    <p>
    <strong>Phone:</strong>
    <%= @userindex.phone %>
    </p>

    <p>
    <strong>Address:</strong>
    <%= @userindex.address %>
    </p>

    <p>
    <strong>Role:</strong>
    <%= @userindex.role.role%>
    </p>
    <% if @user == @userindex %>
    <%= link_to "Edit ", edit_user_path,class:"btn btn-dark mx-1" %> 
    <% end %>   
   
    
</div>
</div>