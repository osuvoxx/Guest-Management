<div class="container">
  <div style="width:100%;height:55px" class="bbottom">
    <div><h1>PROFILE<span style="font-size:16px;">
      <% if @user.role.id == 1 || @user.role.id == 2 %>
        <ul class="navbar-nav float-right">
         <div class="dropdown" style="float:right;">
          <a class="btn mr-5 " href="#" role="button" id="notificationadmin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class=" fa fa-bell fa-2x"></i><span class=" p-1" ><span class="badge badge-danger" style="font-size:15px;"id="count1"></span>
          </a>
          <div class="dropdown-content" id="shownotification1" >
            <a href="#">No New Notification</a>
          </div>
        </div>
        </ul></span></h1>
        <% else %>
        <ul class="navbar-nav float-right" style="display:inline-block-block">
          <!-- Notifications Dropdown Menu -->
          <span style="font-size:16px;">
            <ul class="navbar-nav float-right">
             <div class="dropdown" style="float:right;">
              <a class="btn mr-5 " href="#" role="button" id="notificationadmin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class=" fa fa-bell fa-2x"></i><span class=" p-1" ><span class="badge badge-danger" style="font-size:15px;"id="count2"></span>
              </a>
              <div class="dropdown-content" id="shownotification2" >
                <a href="#">No New Notification</a>
              </div>
            </div>
            </ul></span>
          </h1>
      <% end %>
    </div>
  </div>

  
  
  <div class="row ">
    <div class="col-md-3">
    </div>
      <div style="width:600px;background-color:rgb(221, 213, 213)"class="col-md-5 py-3 px-3 mt-4">
        <%= form_for @user do |form| %>
          <h2 class="text-center">Edit Profile</h2>
            <div class="field">
              <%= form.label :name %>:
              <%= form.text_field :name,class:"form-control" ,required:"true"%>
            </div>
          
            <div class="field">
              <%= form.label :email %>:
              <%= form.text_field :email,class:"form-control",pattern:"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$",placeholder:"your@email.com"%>
            </div>
          
            <div class="field">
              <%= form.label :phone %>:
              <%= form.text_field :phone,class:"form-control",required:"true",minlength: 10, maxlength: 10,pattern:"[0-9]{10}"  %>
            </div>
          
            <div class="field">
              <%= form.label :address %>:
              <%= form.text_area :address,class:"form-control" %>
            </div>
          
            <div class="field">
              <%= form.label :password %>:
              <%= form.text_field :password,class:"form-control",placeholder:"Leave blank if dont want to change"%>
            </div>
            <% if @user.role.id == 5%>
            <div class="field">
              <%= form.label :role_id %>:
              <%= form.select(:role_id, options_for_select([['Employee','2'],['Admin','1'],['Receptionist','3']]),{include_blank: true},class:"form-control")%>
            </div>
            <% end %>
          
            <div class="actions mt-2 text-center">
              <%= form.submit class:"btn btn-dark"%>
            </div>
          <% end %>
        </div>
    
      </div>
    </div>
</div>
</body>