
  
<style>
.bbottom{
  border-bottom:2px solid grey;
}
</style>
<body>
<div style="width=100%;height:55px" class="bbottom">
<h1>Profile</h1>
</div>
<br>
<div class="row">
  <div class="col-md-3">
  </div>
    <div style="width:400px;background-color:grey"class="col-md-3 py-3 px-3">
      <%= form_for @user do |form| %>
        <h2 class="text-center">Edit</h2>
          <div class="field">
            <%= form.label :name %>:
            <%= form.text_field :name,class:"form-control" %>
          </div>
        
          <div class="field">
            <%= form.label :email %>:
            <%= form.text_field :email,class:"form-control" %>
          </div>
        
          <div class="field">
            <%= form.label :phone %>:
            <%= form.text_field :phone,class:"form-control" %>
          </div>
        
          <div class="field">
            <%= form.label :address %>:
            <%= form.text_area :address,class:"form-control" %>
          </div>
        
          <div class="field">
            <%= form.label :password %>:
            <%= form.text_field :password,class:"form-control",placeholder:"Leave blank if dont want to change"%>
          </div>
          <% if @user.role.id == 1%>
          <div class="field">
            <%= form.label :role_id %>:
            <%= form.select(:role_id, options_for_select([['Employee','2'],['Admin','1'],['Receptionist','3']]),{include_blank: true},class:"form-control")%>
          </div>
          <% end %>
        
          <div class="actions">
            <%= form.submit class:"btn btn-dark"%>
          </div>
        <% end %>
      </div>
  
    </div>
  </div>
</body>