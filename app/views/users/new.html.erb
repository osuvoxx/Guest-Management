<div class="container ">
  <div style="width:100%;height:55px" class="bbottom">
    <div><h1>PROFILE<span style="font-size:16px;">
      <% if @user.role.id == 1 || @user.role.id == 2 %>
        <ul class="navbar-nav float-right">
         <div class="dropdown" style="float:right;">
          <a class="btn mr-5 " href="#" role="button" id="notificationadmin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class=" fa fa-bell fa-2x"></i><span class=" p-1" ><span class="badge badge-danger" style="font-size:15px;"id="count1"></span>
          </a>
          <div class="dropdown-content" id="shownotification1" >
            <a href="#">No New Notification</a>
          </div>
        </div>
        </ul></span></h1>
      <% end %>
    </div>
  

<br>
<div class="row">
  <div class="col-md-3">
  </div>
    <div style="width:400px;background-color:rgb(218, 214, 214)"class="col-md-5 py-3 px-3">
      <%= form_for @usernew do |form| %>
        <h2 class="text-center">Add Employee</h2>
          <div class="field">
            <%= form.label :name %>:
            <%= form.text_field :name,class:"form-control",required:"true" %>
          </div>
        
          <div class="field">
            <%= form.label :email %>:
            <%= form.email_field :email,class:"form-control",required:"true",placeholder:"email@mail.com" %>
          </div>
        
          <div class="field">
            <%= form.label :phone %>:
            <%= form.text_field :phone,class:"form-control" ,required:"true" ,minlength: 10, maxlength: 10,pattern:"[0-9]{10}"  %>
          </div>
        
          <div class="field">
            <%= form.label :address %>:
            <%= form.text_area :address,class:"form-control",required:"true" %>
          </div>
        
          <div class="field">
            <%= form.label :password %>:
            <%= form.text_field :password,class:"form-control",required:"true" %>
          </div>
        
          <div class="field">
            <%= form.label :role_id %>:
            <%= form.select(:role_id, options_for_select([['Employee','2'],['Admin','1'],['Receptionist','3']]), {:prompt => '--select--'},class:"form-control")%>
          </div>
        
          <div class="actions text-center mt-2">
            <%= form.submit class:"btn btn-dark"%>
          </div>
        <% end %>
      </div>
  
    </div>
  </div>
</body>