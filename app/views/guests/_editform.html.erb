<%= form_for @guestfind do |form| %>
    <% if visitor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(visitor.errors.count, "error") %> prohibited this visitor from being saved:</h2>
  
        <ul>
          <% visitor.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name,class:"form-control" %>
    </div>
  
    <div class="field">
      <%= form.label :phone %>
      <%= form.text_field :phone ,class:"form-control"%>
    </div>
  
    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address,class:"form-control" %>
    </div>
  
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email,class:"form-control" %>
    </div>
  
    <div class="field">
    
      <%= form.fields_for  :mettings , @guestnew.mettings do |builder| %>
      
        <%= builder.label :purpose %>
        <%= builder.text_area :purpose ,class:"form-control" %>
        <br>
       
        <%= builder.text_field :status ,class:"form-control" ,hidden:"true",value: "0"%>
        <%= builder.label :user_id ,"Employee"%> :       
        <% options = options_from_collection_for_select(User.all, 'id', 'name') %>
        <%= builder.select :user_id,  options %>
          
      <% end %>
  
    </div>
  
    <div class="actions text-center">
      <%= form.submit "SEND"%>
    </div>
    
  <% end %>
  