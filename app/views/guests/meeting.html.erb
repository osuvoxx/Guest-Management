    <%= form_tag meeting_guests_path, :method => 'get' do %>
      <%= label_tag :Phone%>:
      <%= text_field_tag :search,params[:search],required:"true",:minlength => 10,:maxlength => 10%>
      <%= submit_tag "search" %>
    <% end %> 
  <br>
